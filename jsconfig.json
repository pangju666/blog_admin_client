{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "apis/*": [
        "src/apis/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "layout/*": [
        "src/layout/*"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
